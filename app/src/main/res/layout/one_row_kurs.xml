<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/kursrow">

    <Button
        android:id="@+id/buttonstudenciwkurslist"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="4dp"
        android:text="Studenci"
        app:layout_constraintStart_toEndOf="@+id/kursnazwa"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/usunkurs"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"

        android:layout_marginTop="4dp"
        android:text="UsuÅ„"
        app:layout_constraintStart_toEndOf="@+id/edytujkurs"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/edytujkurs"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginTop="4dp"
        android:text="Edytuj"

        app:layout_constraintStart_toEndOf="@+id/buttonstudenciwkurslist"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/kursnazwa"
        android:layout_width="132dp"
        android:layout_height="34dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:text="Nazwa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>